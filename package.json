{
  "name": "startup-network",
  "version": "1.0.0",
  "main": "server/server.js",
  "private": true,
  "workspaces": [
    "client"
  ],
  "scripts": {
    "client": "npm --prefix client start",
    "server": "nodemon server/server.js",
    "dev": "concurrently \"npm run server\" \"npm run client\"",
    "build": "npm --prefix client run build",
    "test": "node tools/run_tests.mjs",
    "test:server": "node --test server/tests/**/*.test.js",
    "test:client": "npm --workspace client test -- --watchAll=false",
    "lint": "node tools/lint.mjs",
    "typecheck": "node tools/typecheck.mjs",
    "verify": "node tools/verify.mjs",
    "previews:svg": "node tools/generate_svg_previews.mjs",
    "preview": "node tools/preview.mjs",
    "smoke": "node scripts/smoke_test.js",
    "heroku-postbuild": "cd client && npm install && npm run build"
  },
  "dependencies": {
    "bcryptjs": "^2.4.3",
    "concurrently": "^6.0.0",
    "config": "^3.3.6",
    "dotenv": "^16.4.5",
    "express": "^4.17.1",
    "express-validator": "^6.15.0",
    "gravatar": "^1.8.2",
    "jsonwebtoken": "^8.5.1",
    "mongoose": "^5.12.3"
  },
  "devDependencies": {
    "nodemon": "^2.0.7"
  }
}
